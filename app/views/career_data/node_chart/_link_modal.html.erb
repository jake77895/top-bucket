<%
=begin%>
 <div class="modal fade" id="linkModal" tabindex="-1" aria-labelledby="linkModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="linkModalLabel">Link Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p><strong>Source Node:</strong> <span id="modal-source"></span></p>
        <p><strong>Target Node:</strong> <span id="modal-target"></span></p>
        <p><strong>Source Industry:</strong> <span id="modal-source-industry"></span></p>
        <p><strong>Source Level:</strong> <span id="modal-source-level"></span></p>
        <p><strong>Target Industry:</strong> <span id="modal-target-industry"></span></p>
        <p><strong>Target Level:</strong> <span id="modal-target-level"></span></p>
        <p><strong>Average Salary Difference:</strong> $<span id="modal-avg-salary-diff"></span></p>
        <p><strong>Average Bonus Difference:</strong> $<span id="modal-avg-bonus-diff"></span></p>
        <p><strong>Average Total Compensation Difference:</strong> $<span id="modal-avg-total-comp-diff"></span></p>
        <p><strong>Average Compensation per Hour Difference:</strong> $<span id="modal-avg-comp-per-hour-diff"></span></p>
        <p><strong>Average Hours Worked Difference:</strong> <span id="modal-avg-hours-worked-diff"></span> hours</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div> 
<%
=end%>
