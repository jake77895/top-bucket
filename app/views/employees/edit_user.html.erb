<h2 class="text-center my-4">Edit Employee - Step 1</h2>

<div class="container">
  <%= form_with(model: @employee, url: update_user_initial_employee_path(@employee, return_to: @return_to), method: :patch, local: true) do |form| %>
    <div class="card shadow-sm border-0">
      <div class="card-header bg-dark text-white">
        <h5 class="mb-0">Basic Information</h5>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <%= form.label :name, 'Employee Name', class: 'form-label' %>
          <%= form.text_field :name, class: 'form-control', placeholder: 'Enter employee name', required: true %>
          <div class="invalid-feedback">
            Please provide an employee name.
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :company_id, 'Select Company', class: 'form-label' %>
          <%= form.collection_select :company_id, @companies, :id, :name, { prompt: 'Select Company' }, { class: 'form-select' } %>
        </div>

        <div class="mb-3">
          <%= form.label :position_type_id, 'Select Position Type', class: 'form-label' %>
          <%= form.collection_select :position_type_id, @position_types, :id, :name, { prompt: 'Select Position Type' }, { class: 'form-select' } %>
        </div>

        <div class="mb-3">
          <%= form.label :location_id, 'Select Location', class: 'form-label' %>
          <%= form.collection_select :location_id, @locations, :id, :name, { prompt: 'Select Location' }, { class: 'form-select' } %>
        </div>
      </div>

      <div class="card-footer d-flex justify-content-end">
        <%= form.submit 'Next', class: 'btn btn-dark' %>
      </div>
    </div>
  <% end %>
</div> 
