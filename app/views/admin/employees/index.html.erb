<h1 class="text-center my-4">Admin: Manage Employees</h1>

<div class="container">
  <!-- New Employee Button -->
  <div class="d-flex justify-content-end mb-3">
    <%= link_to 'New Employee', new_admin_employee_path, class: 'btn btn-dark' %>
  </div>

  <!-- Employee Table -->
  <div class="card shadow-sm border-0">
    <div class="card-header bg-dark text-white">
      <h5 class="mb-0">Employees List</h5>
    </div>
    <ul class="list-group list-group-flush">
      <% @employees.each do |employee| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= employee.name %></strong>
            <p class="mb-0 text-muted">
              Job Level: <%= employee.job_level&.name || 'N/A' %> |
              Company: <%= employee.company&.name || 'N/A' %> |
              Location: <%= employee.location&.name || 'N/A' %>
            </p>
          </div>
          <div class="d-flex align-items-center">
            <%= button_to toggle_verification_admin_employee_path(employee),
                method: :post,
                class: 'btn btn-link p-0 me-2',
                data: { 
                  bs_toggle: 'tooltip',
                  bs_placement: 'top',
                  bs_title: employee.employee_verification&.verified_by_admin? ? 'Remove Verification' : 'Verify Employee'
                } do %>
              <%= image_tag 'icons/check_square.svg',
                  alt: 'Verify',
                  style: "width: 20px; height: 20px; #{employee.employee_verification&.verified_by_admin? ? 'filter: invert(48%) sepia(79%) saturate(2476%) hue-rotate(86deg) brightness(90%) contrast(80%);' : ''}" %>
            <% end %>
            <%= link_to 'Edit', edit_initial_admin_employee_path(employee), class: 'btn btn-outline-secondary btn-sm me-2' %>
            <%= link_to 'Delete', admin_employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
