<div class="card shadow-sm rounded-lg p-2 mb-2" style="max-width: 100%; position: relative;">
  <!-- Content -->
  <div class="d-flex align-items-center mt-1">
    <div class="flex-grow-1">
      <div class="d-flex justify-content-between">
        <h6 class="font-weight-bold mb-0" style="font-size: 0.9rem;">
          <%= recap_card[:name] %>
          <span class="text-muted" style="font-size: 0.75rem;">â€¢</span>
          <span style="font-size: 0.75rem; color: gray;"><%= pluralize(recap_card[:recaps], 'Recap') %></span>
        </h6>
        <span class="badge badge-pill badge-primary" style="font-size: 0.7rem; background-color: var(--bs-primary) !important; color: white !important;">
          <%= recap_card[:tag] %>
        </span>
      </div>
      <p class="mb-1" style="font-size: 0.7rem;"><%= recap_card[:level] %> at <%= recap_card[:company] %></p>
      <p class="text-muted mb-0" style="font-size: 0.7rem;">
        <%= image_tag "icons/recap_card_icons/trend.png", class: "me-1", style: "height: 14px; width: 14px;", title: "Asked About A Market Trend" %>
        <strong><%= recap_card[:market_trend] %>%</strong>
        | <%= image_tag "icons/recap_card_icons/deal.png", class: "me-1", style: "height: 14px; width: 14px;", title: "Asked About A Deal" %>
        <strong><%= recap_card[:deal] %>%</strong>
        | <%= image_tag "icons/recap_card_icons/question.png", class: "me-1", style: "height: 14px; width: 14px;", title: "Asked Technical Questions" %>
        <strong><%= recap_card[:technical] %>%</strong>
      </p>
    </div>
  </div>
</div>
